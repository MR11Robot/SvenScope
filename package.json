{
  "name": "svenscope",
  "version": "1.0.0",
  "description": "A command-line tool for tracking Sven Co-op game servers",
  "main": "dist/index.js",
  "bin": {
    "svenscope": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "package": "pkg . --out-path release"
  },
  "keywords": [
    "sven-coop",
    "game-server",
    "a2s",
    "source-engine"
  ],
  "author": "MR11Robot",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ]
  }
}